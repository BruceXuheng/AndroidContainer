<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/green_insert_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dbOnClick"
        android:text="插入数据" />

    <Button
        android:id="@+id/green_update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dbOnClick"
        android:text="修改数据"

        />

    <Button
        android:id="@+id/green_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dbOnClick"
        android:text="删除数据"

        />

    <Button
        android:id="@+id/green_query_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dbOnClick"
        android:text="查询数据"

        />

    <TextView
        android:id="@+id/green_dao_acty_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>