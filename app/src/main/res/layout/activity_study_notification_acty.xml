<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.study.test.testapplication.notification.StudyNotificationActy">

    <Button
        android:id="@+id/send_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送普通Notifaction"
        android:onClick="notifactionClick"
        />
    <Button
        android:id="@+id/send_a81_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android8 测试发送"
        android:onClick="notifactionClick"
        />
    <Button
        android:id="@+id/send_a82_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android82 测试发送"
        android:onClick="notifactionClick"
        />
</LinearLayout>
