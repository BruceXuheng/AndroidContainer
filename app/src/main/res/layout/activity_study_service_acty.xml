<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.study.test.testapplication.acty.StudyServiceActy">

    <Button
        android:id="@+id/start_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="studyServiceOnClick"
        android:text="开启服务"
        />
    <Button
        android:id="@+id/stop_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="studyServiceOnClick"
        android:text="停止服务"
        />
    <Button
        android:id="@+id/bind_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="studyServiceOnClick"
        android:text="绑定服务"
        />
    <Button
        android:id="@+id/unbind_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="studyServiceOnClick"
        android:text="解绑服务"
        />
    <Button
        android:id="@+id/intent_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="studyServiceOnClick"
        android:text="Intent 服务"
        />
</LinearLayout>
